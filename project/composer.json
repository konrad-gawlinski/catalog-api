{
  "config": {
    "disable-tls": true,
    "secure-http": false,
    "optimize-autoloader": true
  },
  "require-dev": {
    "phpspec/phpspec": "4.*"
  },
  "require": {
    "silex/silex": "v2.*",
    "symfony/config": "v3.*",
    "symfony/yaml": "v3.*",
    "symfony/validator": "v3.*",
    "doctrine/cache": "v1.*"
  },
  "autoload": {
    "psr-4": {
      "Nu3\\Core\\": "src/core/",
      "Nu3\\Service\\": "src/service/",
      "Nu3\\Feature\\": "src/feature/",
      "Nu3\\Core\\Database\\": "src/core/database/"
    }
  }
}