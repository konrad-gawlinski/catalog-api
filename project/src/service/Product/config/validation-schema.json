{
  "title": "Product save",
  "type": "object",
  "properties": {
    "storage": {
      "type": "string",
      "enum": ["COMMON", "DE", "AT"]
    },
    "product": {
      "type": "object",
      "properties": {
        "sku": {
          "type": "string",
          "pattern": "^nu3_[1-9][0-9]{0,4}$"
        },
        "status": {
          "type": "string",
          "enum": [
            "new",
            "approved",
            "not listed",
            "unavailable"
          ]
        },
        "name": {
          "type": "string",
          "maxLength": 60
        },
        "type": {
          "type": "string",
          "enum": [
            "config",
            "bundle",
            "book"
          ]
        },
        "price": {
          "type": "object",
          "properties": {
            "final": {
              "type": "integer",
              "minimum": 1
            }
          }
        },
        "tax_rate": {
          "type": "integer",
          "minimum": 1
        },
        "attributes": {
          "type": "array",
          "uniqueItems": true
        },
        "seo_robots": {
          "type": "array",
          "uniqueItems": true
        },
        "manufacturer": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "short_description": {
          "type": "string"
        },
        "label_language": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z]{2}$"
          }
        }
      },
      "additionalProperties": false,
      "required": ["sku"]
    }
  },
  "additionalProperties": false,
  "required": ["storage", "product"]
}