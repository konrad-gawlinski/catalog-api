{
  "title": "Product save",
  "type": "object",
  "properties": {
    "sku": {
      "type": "string",
      "pattern": "^nu3_[1-9][0-9]{0,4}$"
    },
    "target": {
      "type": "string",
      "enum": ["COMMON", "DE", "AT"]
    },
    "properties": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 60
        },
        "type": {
          "type": "string",
          "enum": [
            "config",
            "bundle",
            "book"
          ]
        },
        "price": {
          "type": "integer",
          "minimum": 1
        },
        "tax_rate": {
          "type": "integer",
          "minimum": 1
        },
        "attributes": {
          "type": "array",
          "uniqueItems": true
        },
        "seo_robots": {
          "type": "array",
          "uniqueItems": true
        },
        "manufacturer": {
          "type": "string",
          "minLength": 1
        },
        "label_language": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z]{2}$"
          }
        },
        "ingredient_list": {
          "type": "integer"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": ["sku", "target", "properties"]
}